<?xml version="1.0" encoding="utf-8"?>

<!--followed https://www.youtube.com/watch?v=oE-BObhBn2k&list=PLxefhmF0pcPnTQ2oyMffo6QbWtztXu1W_&index=42 in the creation of this xml layout-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Layout for each comment recyclerview item on comments_screen-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/post_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp">

            <!--Date of comment-->
            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!--Time of comment-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_time"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <!--Comment made by user-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_comment_text"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>