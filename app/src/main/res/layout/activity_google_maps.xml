<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--Search editText space for user to search for their own church, links to onClick method in GoogleMapsActivity.java-->
    <EditText
        android:id="@+id/location_search"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/church_search"
        />

    <!--Search button used for onClick method in GoogleMapsActivity.java-->
    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:src="@mipmap/ic_search_icon"
        android:onClick="searchNearbyChurches"
        />

    <!--Google Maps fragment, autogenerated by creating Google Maps activity in Android Studio-->
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    tools:context=".GoogleMapsActivity" />


    <RelativeLayout
        android:id="@+id/secondRelativeLayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <!--Button to find nearby churches based on location, links to onClick method in GoogleMapsActivity.java-->
        <Button
            android:id="@+id/nearby_churches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="5dp"
            android:onClick="findNearbyChurches"
            android:background="@color/colorButton"
            android:text="@string/find_churches"/>

    </RelativeLayout>
</RelativeLayout>